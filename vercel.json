{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "zeroConfig": true
      }
    }
  ],
  "routes": [
    { 
      "src": "^/$",
      "dest": "/index.html"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "^/css/(.*)",
      "dest": "/css/$1"
    },
    {
      "src": "^/(register|auth)$",
      "dest": "/index.html"
    },
    {
      "src": "^/(?!(assets|css)/)(.*)",
      "dest": "/index.html"
    }
  ]
}