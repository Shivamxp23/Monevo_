{
    "version": 2,
    "builds": [
      {
        "src": "vite.config.ts",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      {
        "src": "^/$",
        "dest": "/public/index.html"
      },
      {
        "src": "^/auth/?$",
        "dest": "/dist/index.html",
        "headers": {
          "Cache-Control": "no-cache, no-store, must-revalidate"
        }
      },
      {
        "src": "^/register/?$",
        "dest": "/dist/index.html",
        "headers": {
          "Cache-Control": "no-cache, no-store, must-revalidate"
        }
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/.*",
        "dest": "/dist/index.html"
      }
    ]
  }
