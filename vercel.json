{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/register",
      "dest": "/dist/index.html",
      "continue": true
    },
    {
      "src": "/auth",
      "dest": "/dist/index.html",
      "continue": true
    },
    {
      "src": "/assets/(.*)",
      "dest": "/public/assets/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "^/dist/(.*)",
      "dest": "/dist/$1"
    },
    {
      "src": "^/$",
      "dest": "/public/index.html"
    },
    {
      "src": "/((?!dist/).*)",
      "dest": "/dist/index.html"
    }
  ]
}